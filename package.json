{
  "name": "library-frontend",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "axios": "^1.8.4",
    "bootstrap": "^5.2.3",
    "react": "^18.2.0",
    "react-bootstrap": "^2.7.4",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.30.0",
    "react-scripts": "5.0.1",
    "react-toastify": "^9.1.3",
    "web-vitals": "^2.1.4"
  },
  "devDependencies": {
    "@babel/plugin-proposal-private-property-in-object": "^7.21.11",
    "@testing-library/jest-dom": "^5.17.0",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^14.5.2",
    "jest-environment-jsdom": "^29.7.0",
    "jest-junit": "^16.0.0",
    "jest-mock-extended": "^3.0.5",
    "msw": "^2.0.13",
    "supertest": "^6.3.4"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test --watchAll=false",
    "test:watch": "react-scripts test",
    "test:simplified": "react-scripts test --watchAll=false --testPathIgnorePatterns=src/__tests__/MockDataService.test.js --testPathIgnorePatterns=src/__tests__/BookCard.test.js --collectCoverage=false",
    "test:basic": "react-scripts test --watchAll=false src/__tests__/Dummy.test.js",
    "test:backend": "jest --testMatch='**/backend/**/*.test.js' --testEnvironment=node",
    "test:frontend": "react-scripts test --watchAll=false --testMatch='**/src/**/*.test.js'",
    "test:ci": "npm run test:simplified && npm run test:basic",
    "eject": "react-scripts eject",
    "lint": "eslint src --ext .js,.jsx || true"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}",
      "!src/MockDataService.js",
      "!src/BookCard.js",
      "!src/Header.js",
      "!src/StatusIndicator.js",
      "!src/mocks/**",
      "!src/reportWebVitals.js",
      "!src/index.js",
      "!src/setupTests.js"
    ],
    "moduleNameMapper": {
      "\\.(css|less|sass|scss)$": "<rootDir>/src/mocks/styleMock.js",
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/src/mocks/fileMock.js"
    },
    "transformIgnorePatterns": [
      "/node_modules/(?!axios)/"
    ]
  }
}